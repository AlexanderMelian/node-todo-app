    <div class="container">

        <div class="row">
            <h1>Tasks list</h1>
        </div>

        <div class="row">
            <!--FORM-->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <strong>Create Task</strong>
                        <form method="post">
                            <div class="form-group">
                                <input class="form-control" type="text" name="name" id="user_name" placeholder="Name">
                            </div>
                            <button class="btn btn-success" onclick="saveUser()">save</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- LIST -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>NÂ°</th>
